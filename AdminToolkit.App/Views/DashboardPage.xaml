<Page x:Class="AdminToolkit.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,24,32,32">

            <TextBlock Text="Dashboard" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBlock Text="Connect to any customer tenant â€” no app registration needed" Opacity="0.6" Margin="0,0,0,28" />

            <!-- Tenant Switcher (MSP) -->
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="28" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Customer Tenant" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <TextBlock Text="Enter a tenant ID or domain to connect to a specific customer. Leave as 'organizations' to pick at sign-in."
                               Opacity="0.5" TextWrapping="Wrap" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBox Grid.Column="0"
                                    Text="{Binding TargetTenantId, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="organizations  or  contoso.onmicrosoft.com  or  tenant GUID"
                                    Margin="0,0,12,0" />
                        <ui:Button Grid.Column="1" Content="Switch &amp; Connect" Appearance="Primary"
                                   Command="{Binding SwitchTenantCommand}" MinWidth="140"
                                   Visibility="{Binding IsSignedIn, Converter={StaticResource BoolToVisibility}}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Connection Status -->
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="28" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Connection Status" FontSize="18" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                            <Ellipse Width="10" Height="10"
                                     Fill="{Binding IsSignedIn, Converter={StaticResource StatusBrush}}"
                                     VerticalAlignment="Center" Margin="0,0,10,0" />
                            <TextBlock Text="{Binding TokenStatus}" FontSize="14" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock Margin="0,10,0,0" Opacity="0.7">
                            <Run Text="Account: " />
                            <Run Text="{Binding AccountName}" />
                        </TextBlock>
                        <TextBlock Margin="0,4,0,0" Opacity="0.5">
                            <Run Text="Tenant: " />
                            <Run Text="{Binding TenantName}" />
                        </TextBlock>
                        <TextBlock Margin="0,4,0,0" Opacity="0.5">
                            <Run Text="Token expires: " />
                            <Run Text="{Binding TokenExpiry}" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <ui:Button Content="Sign In" Appearance="Primary"
                                   Command="{Binding SignInCommand}" Margin="0,0,0,8" MinWidth="120"
                                   Visibility="{Binding IsSignedIn, Converter={StaticResource InverseBoolToVisibility}}" />
                        <ui:Button Content="Sign Out" Appearance="Secondary"
                                   Command="{Binding SignOutCommand}" Margin="0,0,0,8" MinWidth="120"
                                   Visibility="{Binding IsSignedIn, Converter={StaticResource BoolToVisibility}}" />
                        <ui:Button Content="Refresh" Appearance="Transparent"
                                   Command="{Binding RefreshCommand}" MinWidth="120"
                                   Visibility="{Binding IsSignedIn, Converter={StaticResource BoolToVisibility}}" />
                    </StackPanel>
                </Grid>
            </Border>

            <ProgressBar IsIndeterminate="True" Margin="0,0,0,20"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}" />

            <!-- Quick Navigation Cards -->
            <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
            <UniformGrid Columns="4" Rows="1">
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="20" Margin="0,0,8,0">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="People24" FontSize="28" Margin="0,0,0,8" />
                        <TextBlock Text="Users" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="Manage users, passwords, access" Opacity="0.5" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="20" Margin="4,0,4,0">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="PeopleTeam24" FontSize="28" Margin="0,0,0,8" />
                        <TextBlock Text="Groups" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="Create groups, manage members" Opacity="0.5" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="20" Margin="4,0,4,0">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Mail24" FontSize="28" Margin="0,0,0,8" />
                        <TextBlock Text="Mailboxes" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="Shared mailbox management" Opacity="0.5" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="20" Margin="8,0,0,0">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Code24" FontSize="28" Margin="0,0,0,8" />
                        <TextBlock Text="Runbook" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="Run PowerShell scripts" Opacity="0.5" TextWrapping="Wrap" Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
