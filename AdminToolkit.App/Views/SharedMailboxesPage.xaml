<Page x:Class="AdminToolkit.App.Views.SharedMailboxesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Shared Mailboxes">

    <Grid Margin="32,24,32,32">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600">
            <ui:SymbolIcon Symbol="Mail24" FontSize="48" Margin="0,0,0,20" HorizontalAlignment="Center" />
            <TextBlock Text="Shared Mailboxes" FontSize="28" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,0,0,8" />
            <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Opacity="0.7"
                       TextAlignment="Center" LineHeight="22" Margin="0,0,0,24" />
            <ui:Button Content="Go to Runbook" Appearance="Primary" HorizontalAlignment="Center"
                       MinWidth="160" />
        </StackPanel>
    </Grid>
</Page>
